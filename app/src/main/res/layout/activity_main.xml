<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo o portada -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Portada"
        android:scaleType="centerCrop"
        android:src="@drawable/portada" />


    <ImageButton
        android:id="@+id/btnnueva"
        android:layout_width="157dp"
        android:layout_height="51dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:background="@null"
        android:contentDescription="Botón Salir"
        android:scaleType="centerCrop"
        android:src="@drawable/btnnueva" />

    <ImageButton
        android:id="@+id/btncontinuar"
        android:layout_width="146dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="85dp"
        android:background="@null"
        android:contentDescription="Botón Continuar"
        android:scaleType="centerCrop"
        android:src="@drawable/btncontinuar" />

    <ImageButton
        android:id="@+id/bntajustes"
        android:layout_width="129dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="600dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="85dp"
        android:background="@null"
        android:contentDescription="Botón Ajustes"
        android:scaleType="centerCrop"
        android:src="@drawable/bntajustes" />

    <ImageButton
        android:id="@+id/btnsalir"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="600dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="37dp"
        android:background="@null"
        android:contentDescription="Botón Salir"
        android:scaleType="centerCrop"
        android:src="@drawable/btnsalir" />

    <ImageButton
        android:id="@+id/tienda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="650dp"

        android:layout_marginTop="26dp"
        android:layout_marginEnd="41dp"
        android:background="@null"
        android:contentDescription="Botón Tienda"
        android:src="@drawable/tienda" />
</RelativeLayout>



