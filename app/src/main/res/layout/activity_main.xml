<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo o portada -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Portada"
        android:scaleType="centerCrop"
        android:src="@drawable/portada" />

    <ImageButton
        android:id="@+id/btnnueva"
        android:layout_width="157dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:contentDescription="Botón Salir"
        android:scaleType="centerCrop"
        android:src="@drawable/btnnueva" />

    <ImageButton
        android:id="@+id/btncontinuar"
        android:layout_width="129dp"
        android:layout_height="72dp"
        android:layout_marginTop="250dp"
        android:background="@null"
        android:contentDescription="Botón Continuar"
        android:scaleType="centerCrop"
        android:src="@drawable/btncontinuar" />

    <ImageButton
        android:id="@+id/btncapitulos"
        android:layout_width="129dp"
        android:layout_height="72dp"
        android:layout_marginTop="340dp"
        android:background="@null"
        android:contentDescription="Botón Capitulos"
        android:scaleType="centerCrop"
        android:src="@drawable/btncapitulos" />



    <ImageButton
        android:id="@+id/bntajustes"
        android:layout_width="129dp"
        android:layout_height="72dp"
        android:layout_marginTop="250dp"
        android:layout_marginHorizontal="600dp"
        android:background="@null"
        android:contentDescription="Botón Ajustes"
        android:scaleType="centerCrop"
        android:src="@drawable/bntajustes" />

    <ImageButton
        android:id="@+id/btnsalir"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="600dp"
        android:layout_marginTop="340dp"
        android:background="@null"
        android:contentDescription="Botón Salir"
        android:scaleType="centerCrop"
        android:src="@drawable/btnsalir" />

    <ImageButton
        android:id="@+id/tienda"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="650dp"
        android:background="@null"
        android:contentDescription="Botón Tienda"
        android:src="@drawable/tienda" />
</FrameLayout>



