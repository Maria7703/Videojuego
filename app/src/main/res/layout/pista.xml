<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    >

    <TextView
        android:id="@+id/text1"
        android:layout_width="564dp"
        android:layout_height="71dp"
        android:fontFamily="@font/special_elite"
        android:text="Pista"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/pista1"
        android:layout_width="511dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/special_elite"
        android:text="Puedes usar la nota para escribir tus observaciones."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/pista2"
        android:layout_width="511dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/special_elite"
        android:text="Presta atención a las partes RESALTADAS en los archivos."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/pista3"
        android:layout_width="511dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/special_elite"
        android:text="Tal vez el orden sea importante."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/pista4"
        android:layout_width="511dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/special_elite"
        android:text="Las fechas deben indicar un orden particular."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/pista5"
        android:layout_width="511dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/special_elite"
        android:text="La contraseña de la computadora debe ser algún tipo de clave oculta."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/pista6"
        android:layout_width="511dp"
        android:layout_height="62dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/special_elite"
        android:text="Las mayusculas son importantes."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <TextView
        android:id="@+id/textCerrar"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:fontFamily="@font/special_elite"
        android:text="Da click para continuar"
        android:textAlignment="center"
        android:textColor="@color/amarillo"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>